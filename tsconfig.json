{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": ["es2018", "dom"],
    "paths": {
      "*": ["src/*"]
    },
    "types": ["node"]
  },
  "files": ["src/main.ts", "src/polyfills.ts"],
  "fullTemplateTypeCheck": true,
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "strictTemplates": true
}
